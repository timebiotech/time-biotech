---
import {
  getLangFromUrl,
  useTranslations,
  getRelativeLocaleUrl,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const homeUrl = lang === "ja" ? "/" : "/en";
---

<header class="header">
  <div class="container header-inner">
    <a href={homeUrl} class="logo">
      <img src="/images/logo.png" alt="Time Biotechnologies" class="logo-img" />
    </a>

    <button id="menu-toggle" class="menu-toggle" aria-label="Menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav id="nav-menu" class="nav-menu">
      <ul class="nav-list">
        <li>
          <a href={getRelativeLocaleUrl(lang, "company")} class="nav-link"
            >{t("nav.company")}</a
          >
        </li>
        <li>
          <a href={getRelativeLocaleUrl(lang, "about")} class="nav-link"
            >{t("nav.about")}</a
          >
        </li>
        <li>
          <a href={getRelativeLocaleUrl(lang, "pipeline")} class="nav-link"
            >{t("nav.pipeline")}</a
          >
        </li>
        <li>
          <a href={getRelativeLocaleUrl(lang, "news")} class="nav-link"
            >{t("nav.news")}</a
          >
        </li>
        <li>
          <a
            href={getRelativeLocaleUrl(lang, "contact")}
            class="nav-link btn btn-cat">{t("nav.contact")}</a
          >
        </li>
        <li class="lang-switch">
          <a
            href={getRelativeLocaleUrl(
              "ja",
              Astro.url.pathname.replace(/^\/en/, "") || "/",
            )}
            class:list={["lang-link", { active: lang === "ja" }]}>JP</a
          >
          <span class="lang-sep">/</span>
          <a
            href={getRelativeLocaleUrl(
              "en",
              Astro.url.pathname.replace(/^\/en/, "") || "/",
            )}
            class:list={["lang-link", { active: lang === "en" }]}>EN</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const navMenu = document.getElementById("nav-menu");

  if (menuToggle && navMenu) {
    menuToggle.addEventListener("click", () => {
      const isExpanded = menuToggle.getAttribute("aria-expanded") === "true";
      menuToggle.setAttribute("aria-expanded", String(!isExpanded));
      navMenu.classList.toggle("is-active");
      menuToggle.classList.toggle("is-active");
    });
  }
</script>

<style>
  .header {
    height: var(--header-height);
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid var(--c-gray-100);
  }

  .header-inner {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo-img {
    height: 40px;
    width: auto;
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none; /* Reset default list style */
    margin: 0;
    padding: 0;
  }

  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--c-gray-800);
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--c-accent);
  }

  .nav-link.btn-cat {
    background-color: var(--c-black);
    color: white;
    padding: 0.5rem 1.25rem;
    border-radius: 999px;
  }

  .nav-link.btn-cat:hover {
    background-color: var(--c-accent);
    color: white;
    opacity: 1;
  }

  /* Language Switcher */
  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .lang-link {
    color: var(--c-gray-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .lang-link:hover,
  .lang-link.active {
    color: var(--c-black);
  }

  .lang-sep {
    color: var(--c-gray-300);
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .bar {
    width: 100%;
    height: 2px;
    background-color: var(--c-black);
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }

    .nav-menu {
      position: absolute;
      top: var(--header-height);
      left: 0;
      width: 100%;
      background-color: white;
      border-bottom: 1px solid var(--c-gray-100);
      padding: 1rem 0;
      transform: translateY(-150%);
      transition: transform 0.3s ease;
      z-index: -1;
    }

    .nav-menu.is-active {
      transform: translateY(0);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .nav-list {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .nav-link.btn-cat {
      width: 100%;
      display: inline-block;
      max-width: 200px;
    }

    /* Hamburger Animation */
    .menu-toggle.is-active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .menu-toggle.is-active .bar:nth-child(2) {
      opacity: 0;
    }
    .menu-toggle.is-active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }
</style>
