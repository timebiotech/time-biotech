---
import {
  getLangFromUrl,
  useTranslations,
  getRelativeLocaleUrl,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <h3>Time Biotechnologies, Inc.</h3>
        <p class="copyright">&copy; {year} {t("footer.copyright")}</p>
      </div>

      <div class="footer-links">
        <nav>
          <ul class="footer-nav">
            <li>
              <a href={getRelativeLocaleUrl(lang, "company")}
                >{t("nav.company")}</a>
            </li>
            <li>
              <a href={getRelativeLocaleUrl(lang, "about")}>{t("nav.about")}</a>
            </li>
            <li>
              <a href={getRelativeLocaleUrl(lang, "pipeline")}
                >{t("nav.pipeline")}</a>
            </li>
            <li>
              <a href={getRelativeLocaleUrl(lang, "news")}>{t("nav.news")}</a>
            </li>
            <li>
              <a href={getRelativeLocaleUrl(lang, "contact")}
                >{t("nav.contact")}</a>
            </li>
          </ul>
        </nav>
        <div class="legal-links">
          <!-- Placeholder for Privacy Policy link, hidden for now but layout ready -->
          <!-- <a href="/privacy">Privacy Policy</a> -->
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--c-gray-50);
    padding: 3rem 0;
    margin-top: auto; /* Push to bottom */
    border-top: 1px solid var(--c-gray-200);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-logo h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--c-gray-900);
  }

  .copyright {
    font-size: 0.875rem;
    color: var(--c-gray-500);
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-nav a {
    font-size: 0.9rem;
    color: var(--c-gray-500);
  }

  .footer-nav a:hover {
    color: var(--c-black);
  }

  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .footer-nav {
      justify-content: center;
    }
  }
</style>
