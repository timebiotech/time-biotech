---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="About | Time Biotechnologies, Inc.">
  <Header />

  <main>
    <div class="page-header">
      <div class="container">
        <h1>About</h1>
        <p>会社概要</p>
      </div>
    </div>

    <div class="container page-content">
      <div class="company-table-wrapper">
        <dl class="company-table">
          <div class="table-row">
            <dt>会社名</dt>
            <dd>
              タイムバイオ株式会社<br /><span class="en"
                >Time Biotechnologies, Inc.</span
              >
            </dd>
          </div>
          <div class="table-row">
            <dt>所在地</dt>
            <dd>
              〒606-8304<br />
              京都府京都市左京区吉田下阿達町46-29<br />
              京都大学医薬系総合研究棟309
            </dd>
          </div>
          <div class="table-row">
            <dt>設立</dt>
            <dd>2025年10月31日</dd>
          </div>
          <div class="table-row">
            <dt>創業科学者</dt>
            <dd>井上 治久 教授（京都大学 iPS細胞研究所）</dd>
          </div>
          <div class="table-row">
            <dt>代表取締役社長</dt>
            <dd>逆井 智貴</dd>
          </div>
          <div class="table-row">
            <dt>事業内容</dt>
            <dd>iPSテクノロジーと遺伝子治療を用いた難病治療法の開発</dd>
          </div>
        </dl>
      </div>

      <section class="members-section">
        <h2>メンバー</h2>
        <div class="members-grid">
          <div class="member-card">
            <div class="member-photo">
              <img src="/images/members/sakasai.jpg" alt="逆井 智貴" />
            </div>
            <div class="member-info">
              <h3>逆井 智貴</h3>
              <p class="member-title">代表取締役社長</p>
              <p class="member-bio"></p>
            </div>
          </div>

          <div class="member-card">
            <div class="member-photo">
              <img src="/images/members/kanbayashi.jpg" alt="上林 靖史" />
            </div>
            <div class="member-info">
              <h3>上林 靖史</h3>
              <p class="member-title">取締役</p>
              <p class="member-bio">
                株式会社インテリジェントウェイブ（東証プライム4847）監査役<br />
                株式会社ディー・エヌ・エー 元執行役員経営企画本部長
              </p>
            </div>
          </div>

          <div class="member-card">
            <div class="member-photo">
              <img src="/images/members/inoue.jpg" alt="井上 治久" />
            </div>
            <div class="member-info">
              <h3>井上 治久</h3>
              <p class="member-title">創業科学者</p>
              <p class="member-bio">京都大学 iPS細胞研究所 教授</p>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    background-color: var(--c-gray-50);
    padding: 4rem 0 2rem;
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--c-gray-500);
    font-size: 1.1rem;
  }

  .page-content {
    max-width: 800px;
    margin: 0 auto 6rem;
  }

  .company-table {
    border-top: 1px solid var(--c-gray-200);
  }

  .table-row {
    display: flex;
    border-bottom: 1px solid var(--c-gray-200);
  }

  .table-row dt {
    width: 30%;
    padding: 1.5rem 1rem 1.5rem 0;
    font-weight: 600;
    color: var(--c-gray-900);
  }

  .table-row dd {
    width: 70%;
    padding: 1.5rem 0;
    color: var(--c-gray-800);
    line-height: 1.8;
  }

  .en {
    font-size: 0.9em;
    color: var(--c-gray-500);
  }

  @media (max-width: 640px) {
    .table-row {
      flex-direction: column;
    }

    .table-row dt {
      width: 100%;
      padding-bottom: 0.5rem;
      color: var(--c-gray-500);
      font-size: 0.9rem;
    }

    .table-row dd {
      width: 100%;
      padding-top: 0;
    }
  }

  .members-section {
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 1px solid var(--c-gray-200);
  }

  .members-section h2 {
    font-size: 1.8rem;
    margin-bottom: 2.5rem;
    text-align: center;
    color: var(--c-gray-900);
  }

  .members-grid {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .member-card {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  .member-photo {
    width: 160px;
    height: 200px;
    flex-shrink: 0;
    border-radius: 8px;
    overflow: hidden;
    background-color: var(--c-gray-100);
  }

  .member-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .member-info {
    flex: 1;
  }

  .member-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--c-gray-900);
  }

  .member-title {
    font-size: 0.95rem;
    color: var(--c-accent);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .member-bio {
    font-size: 0.9rem;
    line-height: 1.7;
    color: var(--c-gray-600);
  }

  @media (max-width: 768px) {
    .member-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .member-photo {
      width: 140px;
      height: 175px;
    }

    .member-bio {
      text-align: left;
    }
  }
</style>
