---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="About | Time Biotechnologies, Inc.">
    <Header />

    <main>
        <div class="page-header">
            <div class="container">
                <h1>About</h1>
                <p>Company Profile</p>
            </div>
        </div>

        <div class="container page-content">
            <div class="company-table-wrapper">
                <dl class="company-table">
                    <div class="table-row">
                        <dt>Company Name</dt>
                        <dd>Time Biotechnologies, Inc.</dd>
                    </div>
                    <div class="table-row">
                        <dt>Location</dt>
                        <dd>
                            Medical and Pharmaceutical Sciences Research
                            Building 309<br />
                            46-29 Yoshida-Shimoadachi-cho, Sakyo-ku,<br />
                            Kyoto 606-8304, Japan
                        </dd>
                    </div>
                    <div class="table-row">
                        <dt>Established</dt>
                        <dd>October 31, 2025</dd>
                    </div>
                    <div class="table-row">
                        <dt>Founding Scientist</dt>
                        <dd>Prof. Haruhisa Inoue (CiRA, Kyoto University)</dd>
                    </div>
                    <div class="table-row">
                        <dt>President & CEO</dt>
                        <dd>Tomoki Sakasai</dd>
                    </div>
                    <div class="table-row">
                        <dt>Business</dt>
                        <dd>
                            Development of treatments for intractable diseases
                            using iPS technology and gene therapy
                        </dd>
                    </div>
                </dl>
            </div>

            <section class="members-section">
                <h2>Members</h2>
                <div class="members-grid">
                    <div class="member-card">
                        <div class="member-photo">
                            <img
                                src="/images/members/sakasai.jpg"
                                alt="Tomoki Sakasai"
                            />
                        </div>
                        <div class="member-info">
                            <h3>Tomoki Sakasai</h3>
                            <p class="member-title">President & CEO</p>
                            <p class="member-bio"></p>
                        </div>
                    </div>

                    <div class="member-card">
                        <div class="member-photo">
                            <img
                                src="/images/members/kanbayashi.jpg"
                                alt="Yasushi Kanbayashi"
                            />
                        </div>
                        <div class="member-info">
                            <h3>Yasushi Kanbayashi</h3>
                            <p class="member-title">Director</p>
                            <p class="member-bio">
                                Auditor, Intelligent Wave Inc. (TSE Prime 4847)<br
                                />
                                Former Executive Officer and Head of Corporate Planning,
                                DeNA Co., Ltd.
                            </p>
                        </div>
                    </div>

                    <div class="member-card">
                        <div class="member-photo">
                            <img
                                src="/images/members/inoue.jpg"
                                alt="Haruhisa Inoue"
                            />
                        </div>
                        <div class="member-info">
                            <h3>Haruhisa Inoue</h3>
                            <p class="member-title">Founding Scientist</p>
                            <p class="member-bio">
                                Professor at CiRA, Kyoto University.
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <Footer />
</Layout>

<style>
    .page-header {
        background-color: var(--c-gray-50);
        padding: 4rem 0 2rem;
        text-align: center;
        margin-bottom: 4rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .page-header p {
        color: var(--c-gray-500);
        font-size: 1.1rem;
    }

    .page-content {
        max-width: 800px;
        margin: 0 auto 6rem;
    }

    .company-table {
        border-top: 1px solid var(--c-gray-200);
    }

    .table-row {
        display: flex;
        border-bottom: 1px solid var(--c-gray-200);
    }

    .table-row dt {
        width: 30%;
        padding: 1.5rem 1rem 1.5rem 0;
        font-weight: 600;
        color: var(--c-gray-900);
    }

    .table-row dd {
        width: 70%;
        padding: 1.5rem 0;
        color: var(--c-gray-800);
        line-height: 1.8;
    }

    .en {
        font-size: 0.9em;
        color: var(--c-gray-500);
    }

    @media (max-width: 640px) {
        .table-row {
            flex-direction: column;
        }

        .table-row dt {
            width: 100%;
            padding-bottom: 0.5rem;
            color: var(--c-gray-500);
            font-size: 0.9rem;
        }

        .table-row dd {
            width: 100%;
            padding-top: 0;
        }
    }

    .members-section {
        margin-top: 4rem;
        padding-top: 4rem;
        border-top: 1px solid var(--c-gray-200);
    }

    .members-section h2 {
        font-size: 1.8rem;
        margin-bottom: 2.5rem;
        text-align: center;
        color: var(--c-gray-900);
    }

    .members-grid {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    .member-card {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
    }

    .member-photo {
        width: 160px;
        height: 200px;
        flex-shrink: 0;
        border-radius: 8px;
        overflow: hidden;
        background-color: var(--c-gray-100);
    }

    .member-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .member-info {
        flex: 1;
    }

    .member-info h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: var(--c-gray-900);
    }

    .member-title {
        font-size: 0.95rem;
        color: var(--c-accent);
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .member-bio {
        font-size: 0.9rem;
        line-height: 1.7;
        color: var(--c-gray-600);
    }

    @media (max-width: 768px) {
        .member-card {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .member-photo {
            width: 140px;
            height: 175px;
        }

        .member-bio {
            text-align: left;
        }
    }
</style>
