---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

// Placeholder email address - replace with real one later
const CONTACT_EMAIL = "info@time-biotech.com";
---

<Layout title="Contact | Time Biotechnologies, Inc.">
    <Header />

    <main>
        <div class="page-header">
            <div class="container">
                <h1>Contact</h1>
                <p>Inquiries</p>
            </div>
        </div>

        <div class="container page-content">
            <div class="contact-box">
                <p class="contact-desc">
                    For inquiries regarding collaborative research, contract
                    services, or other matters,<br class="pc-only" />
                    please contact us at the email address below.
                </p>

                <div class="cta-wrapper">
                    <a
                        href={`mailto:${CONTACT_EMAIL}`}
                        class="btn btn-primary btn-large"
                    >
                        <span class="icon">✉️</span> Contact via Email
                    </a>
                </div>

                <div class="email-display">
                    <p class="label">Email Address</p>
                    <code class="email-address">{CONTACT_EMAIL}</code>
                    <p class="note">
                        *If your mail software does not launch, please contact
                        the address above directly.
                    </p>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<style>
    .page-header {
        background-color: var(--c-gray-50);
        padding: 4rem 0 2rem;
        text-align: center;
        margin-bottom: 4rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .page-header p {
        color: var(--c-gray-500);
        font-size: 1.1rem;
    }

    .page-content {
        max-width: 700px;
        margin: 0 auto 6rem;
    }

    .contact-box {
        background: white;
        padding: 3rem;
        border-radius: var(--radius-md);
        border: 1px solid var(--c-gray-200);
        text-align: center;
    }

    .contact-desc {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 3rem;
    }

    .cta-wrapper {
        margin-bottom: 3rem;
    }

    .btn-large {
        font-size: 1.25rem;
        padding: 1rem 2.5rem;
        gap: 0.75rem;
    }

    .email-display {
        padding-top: 2rem;
        border-top: 1px solid var(--c-gray-100);
    }

    .label {
        font-size: 0.9rem;
        color: var(--c-gray-500);
        margin-bottom: 0.5rem;
    }

    .email-address {
        display: inline-block;
        background: var(--c-gray-50);
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-sm);
        font-size: 1.1rem;
        font-family: monospace;
        color: var(--c-black);
        margin-bottom: 1rem;
        user-select: all; /* Make it easy to copy */
    }

    .note {
        font-size: 0.85rem;
        color: var(--c-gray-500);
    }

    .sp-only {
        display: none;
    }
    .pc-only {
        display: inline;
    }

    @media (max-width: 640px) {
        .contact-box {
            padding: 2rem 1rem;
        }

        .sp-only {
            display: inline;
        }
        .pc-only {
            display: none;
        }

        .btn-large {
            width: 100%;
        }
    }
</style>
